{namespace feng.templates.controls autoescape="false"}


/**
 * Round Button
 * @param? content content HTML
 * @param? classname button classname
 */
{template .RoundButton}
<button class="roundButton {$classname}">
	<div class="outline"></div>
	<div class="circle">
		<div class="circle-content">
			{if $content}{ $content }{/if}
		</div>
	</div>
</button>
{/template}


/**
 * Home Button
 * @param token the navigation token collection
 */
{template .HomeButton}

{call .RoundButton}
{param classname}home-button{/param}
{param content}
	<div class="icon"></div>
{/param}
{/call}

<div class="home-button-prompt">
	<h3>Are you sure you want to leave?</h3>
	<div class="button-group">
		{call feng.templates.common.PrimaryButton}
			{param classname: 'small no' /}
			{param icon: 'icon-no' /}
			{param text: 'No' /}
		{/call}
		{call feng.templates.common.PrimaryButton}
			{param classname: 'small yes' /}
			{param icon: 'icon-yes' /}
			{param text: 'Yes' /}
			{param href: $token.HOME /}
		{/call}
	</div>
</div>

{/template}



/**
 * Scene Compass
 */
{template .Compass}
<div class="compass grab">
	{call .RoundButton}
	{param content}
		<div class="cube">
			<div>
				<div class="browse"></div>
				<div class="design"></div>
			</div>
		</div>
	{/param}
	{/call}
</div>
{/template}


/**
 * Book Button
 * @param token the navigation token collection
 */
{template .Book}
<a class="book" href="{ $token.BOOK }">
	{call .RoundButton}
	{param content}
		<div class="icon"></div>
	{/param}
	{/call}
</a>
{/template}


/**
 * Reminder
 * @param tips the tips holding reminders
 */
{template .Reminder}
<div class="reminder">

	<div class="character">
		{call .RoundButton}
		{param content}
			<canvas></canvas>
		{/param}
		{/call}
	</div>

	<div class="dialogue hint">
		<div class="wrapper">
			<button class="prev icon icon-prev"></button>
			<ul class="hints">
			{foreach $tip in $tips}
				<li data-tip-id="{ $tip.id }">{ $tip.reminder }</li>
			{/foreach}
			</ul>
			<button class="next icon icon-next"></button>
		</div>
	</div>
</div>
{/template}


/**
 * Object Selector
 */
{template .ObjectSelector}
<div class="objectSelector">
	<div class="fill"></div>
</div>
{/template}


/**
 * Drop Button
 */
{template .DropButton}
<div class="dropButton">
	<div class="arrow"></div>
</div>
{/template}


/**
 * Tooltip on tip object
 * @param tip the tip
 */
{template .TipTooltip}
<a class="tooltip fadeOut tip locked" data-id="{ $tip.id }" href="{ $tip.goTipToken }">
	<div class="bar">
		<div class="symbol">
			<div class="inner">
				<div class="icon icon-eye-open"></div>
				<div class="icon icon-{ $tip.icon }"></div>
			</div>
		</div>
		<h6>{ $tip.name }</h6>
	</div>
</a>
{/template}


/**
 * Tooltip on gateway
 * @param gateway the gateway object
 */
{template .GatewayTooltip}
<a class="tooltip fadeOut gateway" data-id="{ $gateway.gatewayId }">
	<div class="bar">
		<div class="symbol">
			<div class="inner">
				<div class="icon icon-eye-open"></div>
				<div class="loader"></div>
			</div>
		</div>
		<h6>To { $gateway.viewId }</h6>
	</div>
</a>
{/template}


/**
 * Progress Bar
 * @param tipsOfViews tips key/value pairings categorized by episode views
 */
{template .ProgressBar}
<div class="progressBar">
	<div class="inner">
		<button class="prev icon icon-prev"></button>
		<button class="next icon icon-next"></button>
		<div class="tips-wrapper">
			{foreach $viewId in keys($tipsOfViews)}
				<ul class="tips" data-view-id="{ $viewId }">
					{foreach $tip in $tipsOfViews[$viewId]}
						<li class="tip" data-tip-id="{ $tip.id }">
							<div class="dot">
								<div class="outer"></div>
								<div class="inner"></div>
							</div>
							<div class="dialog">
								<a class="content" href="{ $tip.readTipToken }">
									<div class="icon icon-{ $tip.icon }" data-tip-id="{ $tip.id }" data-view-id="{ $tip.viewId }" data-section-id="{ $tip.sectionId }"></div>
									<h6>{ $tip.name }</h6>
								</a>
							</div>
						</li>
					{/foreach}
				</ul>
			{/foreach}
		</div>
	</div>
</div>
{/template}