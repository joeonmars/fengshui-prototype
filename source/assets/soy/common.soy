{namespace feng.templates.common autoescape="false"}


/**
 * Disc Element
 @param content the content HTML
 */
{template .Disc}

<div class="disc">
	<div class="outer"></div>
	<div class="inner">
		<div class="content">
		{ $content }
		</div>
	</div>
</div>

{/template}


/**
 * Primary Button
 @param? classname the button classname
 @param? href the href of <a> tag
 @param? icon the icon classname
 @param text the button text
 */
{template .PrimaryButton}

{if $href}

<a class="primary-button { $classname }" href="{ $href }">
	{if $icon}
		<div class="icon { $icon }"></div>
	{/if}
	{ $text }
</a>

{else}

<button class="primary-button { $classname }">
	{if $icon}
		<div class="icon { $icon }"></div>
	{/if}
	{ $text }
</button>

{/if}

{/template}


/**
 * Close Button
 */
{template .CloseButton}

<button class="close-button">
	<div class="circle"></div>
	<div class="icon">
		<div></div>
		<div class="lighter"></div>
	</div>
</button>

{/template}


/**
 * Fengshui Logo
 * @param? noText whether excludes logo text
 */
{template .FengshuiLogo}

<div class="fengshui-logo">
	<div class="symbol">
		<div class="needle"></div>
		<div class="frame"></div>
	</div>
	{if $noText != true}
	<h1>
		<div class="line1">FENGSHUI</div>
		<div class="line2">REALTIME</div>
	</h1>
	{/if}
</div>

{/template}


/**
 * popup
 * @param? classname the classname of the popup
 * @param content the content HTML in popup
 */
{template .Popup}

<div class="popup {if $classname}{ $classname }{/if}">
	{call .CloseButton}{/call}
	<div class="content">
	{ $content }
	</div>
</div>

{/template}


/**
 * Tutorial popup
 * @param assetsPath the assets path
 */
{template .TutorialPopup}

{call .Popup}
	{param classname: 'tutorial' /}
	{param content}
		<h1>how to play</h1>
		<div class="line"></div>
		<div class="carousel">

			<ul class="steps">
				<li>
					<video preload="none">
						<source src="{$assetsPath}video/tutorial-1.mp4" type="video/mp4">
					    <source src="{$assetsPath}video/tutorial-1.ogg" type="video/ogg">
					</video>
					<p>Drag and click to move around.</p>
				</li>
				<li>
					<video preload="none">
						<source src="{$assetsPath}video/tutorial-2.mp4" type="video/mp4">
					    <source src="{$assetsPath}video/tutorial-2.ogg" type="video/ogg">
					</video>
					<p>Press and hold an item to investigate it.</p>
				</li>
				<li>
					<video preload="none">
						<source src="{$assetsPath}video/tutorial-3.mp4" type="video/mp4">
					    <source src="{$assetsPath}video/tutorial-3.ogg" type="video/ogg">
					</video>
					<p>Click the top of the cube to view from above.</p>
				</li>
			</ul>

			<aside>
				<ul class="navigator">
					<li><button></button></li>
					<li><button></button></li>
					<li><button></button></li>
				</ul>
			</aside>
			
		</div>
		<div>
			<div class="loader">
				<div class="bar">
					<div class="fill"></div>
				</div>
				<p class="counter">00</p>
			</div>
			{call .PrimaryButton}
				{param classname: 'skip' /}
				{param icon: 'skip' /}
				{param text: 'skip' /}
			{/call}
		</div>
	{/param}
{/call}

{/template}